@using InventoryWeb.Models
@model CategoryModel

@{
    ViewData["Title"] = "Edit";
}




<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-body">
            <div class="row" id="default">
                <div class="col-12">
                    @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="card border-custom">
                            <div class="card-header bg-custom">
                                <h4 class="card-title"><i class="fas fa-edit"></i> Update Category</h4>
                            </div>
                            <div class="card-body">
                                @Html.AntiForgeryToken()

                                <div class="row">
                                    <div class="col-md-12">
                                        <form asp-action="Add" enctype="multipart/form-data">
                                            <div class="row">
                                                <div class="col-6">

                                                    <div class="form-group">
                                                        <label asp-for="Name"></label>
                                                        <input type="text" asp-for="Name" class="form-control form-control-medium">
                                                        <input type="text" asp-for="Id" class="form-control form-control-medium" hidden>
                                                        <span class="text-danger" asp-validation-for="Name"></span>
                                                    </div> 
                                              
                                                    <br />

                                                    <div class="form-group">
                                                        <label asp-for="Description"></label>
                                                        <input type="text" asp-for="Description" class="form-control form-control-medium">
                                                        <span class="text-danger" asp-validation-for="Description"></span>
                                                    </div>
                                                    <br />


                                                    <br />

                                                   
                                                </div>


                                            </div>
                                        </form>
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-between">
                                    <a href="javascript:history.back();" class="btn btn-light btn-medium text-white"><i class="fa fa-arrow-circle-left"></i> Back</a>
                                    <button type="submit" class="btn btn-success btn-medium" id="submitButton"><i class="fa fa-save"></i> Update</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    <br />
    <a class="btn btn-link" asp-action="Index">Back</a>
</div>

@section Scripts {


}

